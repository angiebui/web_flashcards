<div class="container">
  <header><h1>RARA Flashcards</h1></header>

  <p id="errors"><% if @errors %>
    <% @errors.each do |error| %> 
    <%= error %><br>
    <% end %></p>
    <% end %></p>

    <div class="logged in">

      <% if logged_in? %>
      <a href="/user/<%=current_user.id%>">Your Profile</a><br>
      <br>

      <% @rounds.each_with_index do |round, index| %>
      <ul> 
       <li><%= index + 1 %>. <a href="/user/<%=round.user.id%>"><%=round.user.name.capitalize%></a></li> Deck: <%= round.deck.category %> Score <%= round.score
      %> </ul>    
      <% end %>

      <br>
      <h3>Play a Game!<h3>
        <% @decks.each_with_index do |deck, index| %>  
        <ul> <li><%= index + 1 %>. <a href="/deck/<%=deck.id%>"> <%=deck.category.capitalize%></a></li> </ul>
        <% end %>

      </div>


      <div class="login container">
        
        <form action="/logout" method="post">
          <input class="logout" type="submit" value="Logout"><br>

        </form>
      </div>
      <% else %>
      <p><h4>Login</h4></p> 
      <form action="/login" method="post">
        Email: <input type="text" placeholder ="robert@example.com" name="email"><br>
        Password: <input type="password" name="password"><br>
        <input class="login" type="submit" value="Submit"><br>
      </form>

      <p><h4>Sign-up</h4></p>
      <form action="/signup" method="post">
        Name: <input type="text" placeholder ="Robert Kim" name="name"><br>
        Email: <input type="text" placeholder ="robert@example.com" name="email"><br>
        Password: <input type="password" name="password"><br>
        <input class="signup" type="submit" value="Submit"><br>
      </form>

    <% end %>
</div>


